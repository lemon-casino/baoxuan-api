{
  "apps": [
    {
      "name": "bi",
      "script": "./app.js",
      "env": {
        "NODE_ENV": "dev"
      },
      "env_production": {
        "NODE_ENV": "prod"
      },
      "instances": 2,
      "exec_mode": "cluster",
      "max_restarts" : 15,
      "restart_delay" : 5000,
      "log_date_format" : "YYYY-MM-DD HH:mm Z",
      "combine_logs" : true,
      "log_file": "./logs/combined.out.log",
      "out_file": "./logs/out.log",
      "error_file": "./logs/err.log"
    }
  ]
}
